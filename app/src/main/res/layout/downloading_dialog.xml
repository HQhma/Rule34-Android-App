<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/background_color"
    android:padding="24dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Downloading . . ."
        android:textColor="@color/text_color_white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/filenameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="image.jpg"
        android:textColor="@color/text_color_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        tools:max="100"
        tools:progress="30"
        android:progressTint="@color/primaryColor"
        android:progressBackgroundTint="@color/menu_divider_color"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filenameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="16dp"
        />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Minimize"
        android:textSize="16dp"
        android:textColor="@color/text_color_white"
        android:backgroundTint="@color/menu_divider_color"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notNowBtn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        />

    <Button
        android:id="@+id/notNowBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16dp"
        android:backgroundTint="@color/errorColor"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/updateBtn"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>